<%- include('../base_template/navbar.ejs')-%>

 <% if(locals.error){%>
  <div style="width: 60%;background:rgb(250, 97, 128);color:rgb(65, 4, 4);border-radius: 4px;;margin:3px auto;">
      <%=error%>
  </div>
<%}%>
<!--container-->
<div class="containers" style="display: flex;flex-direction: column;">
  <div style="width: 100%; display: flex; justify-content: center">
  <form style="width: 60%" action="/users/login" method="POST">
    <div class="mb-3">
      <label for="identfir" class="form-label">username or email</label>
      <input
        type="identfir"
        class="form-control"
        id="identfir"
        name="email"
        aria-describedby="emailHelp"
      />
    </div>
    <div class="mb-3">
      <label for="password" class="form-label">password</label>
      <input
        type="password"
        class="form-control"
        id="password"
        name="password"
      />
    </div>


    <button type="submit" class="btn btn-primary">login</button>
  </form>
</div>
</div>

