<div class="containers">
  <div class="">
    <div class="container">
      <div
        class="main-body"
        style="width: 100%; display: flex; justify-content: center"
      >
        <div class="row gutters-sm mt-3" style="width: 100%">
          <div class="col-md-12 mb-3" style="width: 100%">
            <div class="card">
              <div class="card-body">
                <div class="d-flex flex-column align-items-center text-center">
                  <img
                  <% if(locals.user.avater.filename){ %>
                    src="<%= '/media/'+locals.user.avater.filename%>"
                    <% } else { %>
                      src="/media/profile.png"
                      <%}%>
                    alt="Admin"
                    class="rounded-circle"
                    width="200"
                  />
                  <div class="mt-3">
                    <h4></h4>
                    <p class="text-secondary mb-1"></p>
                    <p
                      class="text-muted font-size-sm"
                      style="
                        border-radius: 3px;
                        padding: 3px;
                        font-size: 14px;
                        color: rgb(248, 247, 246);
                        background-color: #2c2c2c;
                      "
                    ><%=locals.moment(locals.user.created_at).format('YYYY-MM-DD')%></p>
                    <form action="/users/save-image" enctype="multipart/form-data" method="post">
                      <input type="file" name="avatar" id="" />
                      <button
                        class="btn"
                        style="
                          background-color: rgb(189, 11, 11);
                          color: rgb(248, 247, 246);
                        "
                      >
                        Update
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
